<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="@color/black"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="26dp">

        <requestFocus />
    </EditText>

    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="20">

        <Button
                android:id="@+id/BtnC"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="C" android:layout_weight="25" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/BtnNeg"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="-/+" android:layout_weight="25" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/BtnPorcent"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="%" android:layout_weight="25" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/BtnDiv"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="/" android:layout_weight="25"
                android:textSize="30dp"
                android:gravity="center"
                android:padding="0dp"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" >

        <Button
                android:id="@+id/Btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:padding="0dp"
                android:text="7"
                android:textSize="30dp" />

        <Button
                android:id="@+id/Btn8"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="8" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/Btn9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="9" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/BtnX"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="x" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" >

        <Button
                android:id="@+id/Btn4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="4" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/Btn5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="5" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/Btn6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="6" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/BtnMenos"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="-" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" >

        <Button
                android:id="@+id/Btn1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="1" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/Btn2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="2" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/Btn3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="3" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/BtnMas"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="+" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" >

        <Button
                android:id="@+id/Btn0"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="0" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/BtnPunto"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="." android:textSize="30dp" android:gravity="center" android:padding="0dp"/>

        <Button
                android:id="@+id/BtnIgual"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="=" android:textSize="30dp" android:gravity="center" android:padding="0dp"/>
    </LinearLayout>
</LinearLayout>